---
import { ViewTransitions } from 'astro:transitions'
import 'src/styles/global.css'
import Footer from '@templates/Footer.astro'
import Header from '@templates/Header.astro'
export interface Props {
	title: string;
}

const { title } = Astro.props
---

<!DOCTYPE html>
<html lang='en'>
<head>
	<meta charset='UTF-8' />
	<meta name='description' content='Bambuu Website'>
	<meta name='viewport' content='width=device-width' />
	<link rel='icon' type='image/svg+xml' href='/favicon.svg' />
	<link rel='apple-touch-icon' type='image/svg+xml' href='/favicon.svg' />
	<meta name='generator' content={Astro.generator} />
	<ViewTransitions />
	<title>{title}</title>

</head>
<body class='text-[1.4rem] lg:text-[2rem] font-avenir'>
<Header />
<main class='min-h-screen w-full flex flex-col gap-[6rem] md:gap-[13rem] xl:gap-[20rem]'>
	<slot />
</main>
<Footer />
</body>
</html>

